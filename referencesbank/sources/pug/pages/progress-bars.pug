extends  ../_skeleton

//- Includes
include ../components/_ui-progress-linear
include ../components/_ui-counter
include ../components/_ui-countdown
include ../components/_ui-progress-circle

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	include ../sections/_header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		title: 'Progress Bars, Skill Bars, Counters',
		img: 'bg-image-9'
	}).breadcrumbs-custom-overlay-2

	// Skill Bars
	section.section.section-md
		.container
			.text-center
				h2 Progress Bars, Skill Bars, Counters
				h5.text-gray-500: span(style='max-width: 690px;') These elements are vital to design of every website, and with them you can improve the overall look of your resource and attract more clients.

			.row.justify-content-center.offset-top-1
				.col-md-6.col-lg-5.col-xl-4
					+progress-linear({
						title: 'Sales',
						valueTo: '75',
					}).progress-bar-red

					+progress-linear({
						title: 'Analysis',
						valueTo: '80'
					})

				.col-md-6.col-lg-5.col-xl-4
					+progress-linear({
						title: 'Finance',
						valueTo: '85'
					}).progress-bar-secondary

					+progress-linear({
						title: 'Marketing',
						valueTo: '80'
					}).progress-bar-tertiary

	// Counters
	include ../sections/_section-counters

	// Section Circle Progress Bars
	section.section.section-md.text-center
		.container
			.row.justify-content-center.row-50
				.col-sm-10.col-md-8.col-lg-12
					.row.justify-content-center.row-50
						.col-md-5.col-lg-3
							+progress-circle({
								title:   'Leadership',
								value:   73
							})
						.col-sm-5.col-lg-3
							+progress-circle({
								title:   'Management',
								value:   11
							})
						.col-sm-5.col-lg-3
							+progress-circle({
								title:   'Innovation and creativity',
								value:   13
							})
						.col-sm-5.col-lg-3
							+progress-circle({
								title:   'Resilience',
								value:   59
							})
	hr

	// Countdown
	section.section.section-md.bg-white.text-center
		.container
			.row.justify-content-center
				.col-md-10.col-xl-9
					h3 Countdown
					+countdown({ to: '2022-09-09' })

	// Page Footer
	include ../sections/_footer-classic