extends  ../_skeleton

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Search Results'

block page 
	// Page Header
	include ../sections/_header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		img: 'bg-image-1'
	})

	// Search results
	section.section-md
		.container
			.row
				.col-lg-11.col-xl-9
					// RD Search
					form.rd-form.rd-search.form-inline(action='search-results.html' method='GET')
						.form-wrap
							label.form-label(for='rd-search-form-input') Search
							input.form-input(id='rd-search-form-input' type='text' name='s' autocomplete='off')
						.form-wrap.form-button
							button.btn.btn-primary(type='submit') Search

					.rd-search-results

	// Page Footer
	include ../sections/_footer-classic
