extends  ../_skeleton

//- Includes
include ../components/_ui-pagination

block variables
	- var activeCategory = 'for-candidates'
	- var pageName = 'Job Listing'

block page 
	// Page Header
	include ../sections/_header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		img: 'bg-image-6'
	}).breadcrumbs-custom-overlay-4


	section.section.section-md
		.container
			form.form-layout-search.form-lg
				.form-wrap.form-wrap-icon
					input#form-employer.form-input(type='text' name='employer' data-constraints='@Required')
					label.form-label(for='form-employer') Search Keywords
					span.icon.fl-bigmug-line-search74

				.form-wrap.form-wrap-icon.form-wrap-select
					// Select 2
					select.form-input.select#form-region(data-placeholder='All Regions' name='region' data-minimum-results-for-search='Infinity' data-constraints='@Selected')
						option(label='All Regions')
						option(value='1') Seattle
						option(value='2') Miami
						option(value='3') Chicago
					span.icon.fl-bigmug-line-big104

				.form-wrap.form-wrap-button
					button.btn.btn-lg.btn-primary(type='submit') Search

			.row.row-50.flex-lg-row-reverse
				.col-lg-4.col-xl-3
					.row.row-30
						.col-sm-6.col-lg-12
							p.heading-8 Date posted
							hr
							ul.list.list-xs
								li: label.checkbox
									input(name='date-posted-checkbox-1' value='checkbox-1' type='checkbox')
									| Last Hour

								li: label.checkbox
									input(name='date-posted-checkbox-2' value='checkbox-2' type='checkbox')
									| Last 24 hours

								li: label.checkbox
									input(name='date-posted-checkbox-3' value='checkbox-3' type='checkbox')
									| Last 7 days

								li: label.checkbox
									input(name='date-posted-checkbox-4' value='checkbox-4' type='checkbox')
									| Last 30 days

						.col-sm-6.col-lg-12
							p.heading-8 Vacancy Type
							hr
							ul.list.list-xs
								li: label.checkbox.checkbox_info.text-tertiary
									input(name='vacancy-type-checkbox-1' value='checkbox-1' type='checkbox')
									| Freelance
									span.checkbox-meta 35

								li: label.checkbox.checkbox_info.text-primary
									input(name='vacancy-type-checkbox-2' value='checkbox-2' type='checkbox')
									| Full Time
									span.checkbox-meta 25

								li: label.checkbox.checkbox_info.text-secondary
									input(name='vacancy-type-checkbox-3' value='checkbox-3' type='checkbox')
									| Part Time
									span.checkbox-meta 55

								li: label.checkbox.checkbox_info.text-blue-11
									input(name='vacancy-type-checkbox-4' value='checkbox-4' type='checkbox')
									| Internship
									span.checkbox-meta 55

						.col-sm-6.col-lg-12
							p.heading-8 Speciality
							hr
							.form-wrap.form-wrap-select.form-filled
								// Select 2
								select.form-input.select(name='speciality' data-minimum-results-for-search="Infinity" data-constraints='@Selected' data-placeholder='Select a speciality' data-dropdown-class='select2-dropdown-filled')
									option(label='Select a speciality')
									option(value='1') Web Design
									option(value='2') Development
									option(value='3') Marketing
									option(value='4') Illustration

							ul.list.list-xs
								li
									label.checkbox.checkbox_info
										input(name='category-checkbox-1' value='checkbox-1' type='checkbox')
										| Web Design
										span.checkbox-meta 23

								li
									label.checkbox.checkbox_info
										input(name='category-checkbox-2' value='checkbox-2' type='checkbox')
										| Illustrator
										span.checkbox-meta 47

								li
									label.checkbox.checkbox_info
										input(name='category-checkbox-3' value='checkbox-3' type='checkbox')
										| Art Director
										span.checkbox-meta 67

								li
									label.checkbox.checkbox_info
										input(name='category-checkbox-4' value='checkbox-4' type='checkbox')
										| UX Design
										span.checkbox-meta 35

						.col-sm-6.col-lg-12
							p.heading-8 Filter by Salary
							hr
							ul.list.list-xs
								li
									label.checkbox.checkbox_info
										input(name='salary-checkbox-1' value='checkbox-1' type='checkbox')
										| $0 - $1000
										span.checkbox-meta 100

								li
									label.checkbox.checkbox_info
										input(name='salary-checkbox-2' value='checkbox-2' type='checkbox')
										| $1000 - $5000
										span.checkbox-meta 73

								li
									label.checkbox.checkbox_info
										input(name='salary-checkbox-3' value='checkbox-3' type='checkbox')
										| $5000 - $20000
										span.checkbox-meta 55

								li
									label.checkbox.checkbox_info
										input(name='salary-checkbox-4' value='checkbox-4' type='checkbox')
										| $2000 - $50000
										span.checkbox-meta 35

								li
									label.checkbox.checkbox_info
										input(name='salary-checkbox-5' value='checkbox-5' type='checkbox')
										| $50000+
										span.checkbox-meta 15

