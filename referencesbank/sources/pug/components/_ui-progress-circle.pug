//- Circle progress bar
	@param {object} data
	@param {string} data.title
	@param {number} data.value
mixin progress-circle( data )
	//Circle progress bar
	.progress-circle&attributes( attributes )
		.progress-circle-block
			svg.progress-circle-bar( x='0', y='0', width='180', height='180', viewbox='0 0 180 180' )
				circle.progress-circle-bg( cx=90, cy=90, r=85 )
				circle.progress-circle-fg.clipped( cx=90, cy=90, r=85 )
			.progress-circle-counter= data.value
		if (data.title)
			p.progress-circle-title= data.title
