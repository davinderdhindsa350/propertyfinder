//- Bootstrap Accordion
	@param {object}  obj           - accordion object
	@param {boolean} obj.show      - is accordion not collapsed
	@param {string}  obj.parentId  - parent accordion id
	@param {string}  obj.title     - accordion title
mixin accordion-item( obj )
	-
		var
				headId = obj.parentId + '-accordion-head-' + randomStr(8),
				bodyId = obj.parentId + '-accordion-body-' + randomStr(8);

	.accordion-item&attributes( attributes )
		h4.accordion-heading( id= headId )
			button.accordion-button( type='button', data-bs-toggle='collapse', data-bs-target='#' + bodyId, aria-controls= bodyId, aria-expanded= Boolean(obj.show).toString())
				= obj.header
				span.accordion-arrow
		.accordion-collapse.collapse( id= bodyId, aria-labelledby= headId, data-bs-parent='#' + obj.parentId, class={show: obj.show})
			.accordion-body
				block

