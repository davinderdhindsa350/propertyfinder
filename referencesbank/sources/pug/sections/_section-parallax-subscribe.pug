+parallax({
	img: 'parallax-3'
}).section-md.bg-gray-700.bg-overlay-5.text-center
	.container: .block-2
		h3: span(data-bs-toggle='modal' data-bs-target='#forms-modal-tip') Subscribe to Our Newsletter #[span.tip-mark ?]
		p(style='letter-spacing: 0.05em;') Sign up to our newsletter and be the first to know about the latest company news.

		// Rd Mailform
		form.rd-form.rd-mailform.form-lg.form-filled.form-inline.form-inline_condensed(data-form-output='form-output-global' data-form-type='subscribe' method='post' action='bat/rd-mailform.php')
			.form-wrap
				input.form-input#subscribe-form-email(type='email' name='email' data-constraints='@Email @Required')
				label.form-label(for='subscribe-form-email') E-mail
			.form-button
				button.btn.btn-blue-9.btn-form-indicator.btn-icon-only(type='submit' aria-label='subscribe')
					span.icon.form-icon-default.icon-lg.fl-bigmug-line-paper122
					span.icon.form-icon-success.icon-lg.mdi.mdi-check